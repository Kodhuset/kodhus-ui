{
  "root": true,
  "env": {
   "es6": true,
   "node": true,
   "browser": true
  },
  "globals": {
    "hljs": true
  },
  "extends": [ "airbnb", "plugin:import/warnings" ],
  "parserOptions": {
   "ecmaVersion": 6,
   "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "no-param-reassign": 0
  }
 }